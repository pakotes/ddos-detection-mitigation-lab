# Configuração de Ambiente - DDoS Mitigation System

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_CONSUMER_GROUP_ML=ml-processor
KAFKA_CONSUMER_GROUP_BGP=bgp-controller

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ML Processor Configuration
ML_MODEL_PATH=/app/models
ML_REPUTATION_THRESHOLD=0.7
ML_ANOMALY_THRESHOLD=-0.5
ML_CACHE_TTL=3600

# BGP Controller Configuration
EXABGP_CONFIG_PATH=/etc/exabgp/exabgp.conf
BGP_BLACKHOLE_COMMUNITY=65000:666
BGP_BLACKHOLE_NEXT_HOP=192.0.2.1
BGP_DEFAULT_TTL=3600

# Data Ingestion Configuration
SURICATA_LOG_PATH=/var/log/suricata/eve.json
NETFLOW_BIND_HOST=0.0.0.0
NETFLOW_BIND_PORT=2055
ENABLE_SURICATA=true
ENABLE_NETFLOW=true

# Monitoring Configuration
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin123

# Development Configuration
DEBUG=false
LOG_LEVEL=INFO
ENVIRONMENT=development

# Performance Tuning
KAFKA_BATCH_SIZE=16384
KAFKA_LINGER_MS=10
ML_WORKER_THREADS=4
BGP_WORKER_THREADS=2

# Security Configuration
ENABLE_TLS=false
TLS_CERT_PATH=/certs/server.crt
TLS_KEY_PATH=/certs/server.key
